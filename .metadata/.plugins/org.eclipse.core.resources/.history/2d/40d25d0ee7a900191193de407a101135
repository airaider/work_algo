package array;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Q3_sol {
	static int Y,X,N;
	static int py,px,pn;
	static int [][] map;
	static int mon=0;
	static int[][] direction = {
			{0,1},
			{1,0},
			{0,-1},
			{-1,0}
	};
	public static void main(String[] args) throws FileNotFoundException {
		System.setIn(new FileInputStream("test3.txt"));
		Scanner sc = new Scanner(System.in);
		int T=sc.nextInt();
		for(int t=1;t<=T;t++) {
			mon=0;
			Y=sc.nextInt();
			X=sc.nextInt();
			N=sc.nextInt();
			
			map = new int [Y][X];
			for (int i = 0; i < Y; i++) {
				for (int j = 0; j < X; j++) {
					map[i][j]=sc.nextInt();
				}
			}
			for (int i = 0; i < N; i++) {
				py=sc.nextInt();
				px=sc.nextInt();
				pn=sc.nextInt();
				jump(py,px,pn);
			}
			int tnum=sc.nextInt();
			for (int i = 0; i < tnum; i++) {
				int ty=sc.nextInt();
				int tx=sc.nextInt();
				mon-=map[ty-1][tx-1]*100;
			}
			System.out.println(mon);
			
		}


	}
	private static void jump(int a, int b, int c) {
		int num=map[a-1][b-1];
		int dir=num/10;	//방향
		int dis=num%10; //정도
		a=a-1+(direction[dir-1][0])*dis;
		b=b-1+(direction[dir-1][1])*dis;
		if(0<a && a<=Y && 0<b && b<=X) {
			mon+=map[a][b]*100;
		}
		
		
	}
	private static void show() {
		for(int i=0;i<Y;i++) {
			for(int j=0;j<X;j++) {
				System.out.printf("%3d",map[i][j]);
			}
			System.out.println();
		}
		
	}

}
