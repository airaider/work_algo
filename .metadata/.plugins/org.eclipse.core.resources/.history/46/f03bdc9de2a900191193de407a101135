package array;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Q2_sol {
	static int N;
	static int salt,ans;
	static int a,b,d;
	static int[][] dir= {
			{-1,0},
			{1,0},
			{0,-1},
			{0,1},
	};
	public static void main(String[] args) throws FileNotFoundException {
		System.setIn(new FileInputStream("test2.txt"));
		Scanner sc = new Scanner(System.in);
		System.out.println(dir[2][0]);
		System.out.println(dir[3][0]);
		System.out.println(dir[0][0]);
		System.out.println(dir[1][0]);
		int T=sc.nextInt();
		for(int t=1;t<=T;t++) {
			N=sc.nextInt();
			salt=sc.nextInt();
			ans=salt;
			boolean[][] map = new boolean [N][N];
			for(int i=0;i<salt;i++) {
				a=sc.nextInt();
				b=sc.nextInt();
				d=sc.nextInt();
				jump(a,b);
			}
		}
	}
	private static void jump(int x, int y) {
		for (int i = 1; i <= 3; i++) {
			x=x+(dir[d][0])*i;
			y=y+(dir[d][1])*i;
			
		}
		
//		for(int i=3;i>0;i--) {
//			y=y+i;
//			if(y<0 || y>=N) {
//				ans--;
//			}
//			if(map[x][y]!=0) {
//				ans=count;
//				return;
//			}
//			map[x][y]=1;
//		}
	}

}
