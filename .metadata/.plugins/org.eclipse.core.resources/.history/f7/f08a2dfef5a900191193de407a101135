package array;

import java.util.Arrays;

public class gravity {
	static int[][] map;
	static int[][] grav;
	public static void main(String[] args) {
		map = new int [9][9];
		grav = new int [9][9];
		int[] a = {7,4,2,0,0,6,0,7,0};
		int[] cnt = new int[9];
		
		for (int i = 0; i < 9; i++) {
			if(a[i]!=0) {
				for (int j = 8; j >=9-a[i] ; j--) {
					map[j][i]=a[i];
				}
			}
		}
		show();
		System.out.println();
		
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if(map[i][j]!=0) {
					int base=9-j;
					for(int k=j;k<9;k++) {
						if(map[i][k]!=0) {
							base--;
						}
					}
					map[i][j]=base;
				}
			}
		}
		show();
		System.out.println();
		
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if(map[i][j]!=0) {
					cnt[8-i]+=1;
				}
			}
		}
		System.out.println(Arrays.toString(cnt));
		
		show();
		System.out.println();
		
	}
	
	private static void show() {
		for(int i=0;i<9;i++) {
			for(int j=0;j<9;j++) {
				System.out.printf("%2d",map[i][j]);
			}
			System.out.println();
		}
		
	}
	
}
